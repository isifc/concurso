{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Persona'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
    
<div class="well well-lg">
    <h1>Persona</h1>
    <form class="form-horizontal">
        <fieldset>                <div class="form-group">
                    <label class="control-label">Id</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.id }}</span>                    </div>
                </div>                <div class="form-group">
                    <label class="control-label">Dni</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.dNI }}</span>                    </div>
                </div>                <div class="form-group">
                    <label class="control-label">Apellidoynombre</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.apellidoynombre }}</span>                    </div>
                </div>                <div class="form-group">
                    <label class="control-label">Escalafon</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.escalafon }}</span>                    </div>
                </div>                <div class="form-group">
                    <label class="control-label">Plantapermanente</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.plantaPermanente }}</span>                    </div>
                </div>        </fieldset>
    </form>
</div>

        <div class="col-lg-9">
    <div class="float-left col-lg-3">
        <a class="btn btn-info col-lg-11" href="{{ path('admin_persona') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left col-lg-3">
        <a class="btn btn-primary col-lg-11" href="{{ path('admin_persona_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left col-lg-3">{{ form(delete_form) }}</div>
</div>
{% endblock %}
